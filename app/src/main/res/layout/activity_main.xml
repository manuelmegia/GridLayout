            android:backgroundTint="#ea4d39 "
            android:text="="
            app:cornerRadius="0dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="4"
            android:layout_columnWeight="1" />

    </GridLayout>

</GridLayout>