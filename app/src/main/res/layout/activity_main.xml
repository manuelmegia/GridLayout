            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_rowWeight="5"
            android:layout_columnWeight="1"
            android:backgroundTint="#00537d"
            android:text="7"
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/b8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
